{
  "compilerOptions": {
    "target": "es5",
    "lib": [ "es6", "dom" ],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "allowJs": true,
    "importHelpers": true,
    "removeComments": true,

    "strict": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "rootDir": "src",
    "baseUrl": "src/",
    "outDir": "out",
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/node_modules/**/*",
    "**/dist/**/*",
  ]
}
