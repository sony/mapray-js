{
  "compilerOptions": {
    "target": "es5",
    "lib": [ "es6", "dom" ],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "allowJs": true,
    "removeComments": true,
    "downlevelIteration": true,

    "strict": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    "rootDir": "src",
    "baseUrl": "src/"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
